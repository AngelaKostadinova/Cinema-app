@model List<MovieViewModel>
@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>
<div class="header-right">
    <form method="get">
        <div class="input-group">
            <input class="form-control" type="text" placeholder="Search movie" value="@ViewData["Search"]" name="searchTerm" />
            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-search"></span></span>
        </div>
        <br />
        <div class="input-group">
            <button type="submit" class="btn btn-success">Search</button>
        </div>
    </form>
</div>
<br />
<div class="movies">
    @foreach (var movie in Model)
    {
        <div class="thumbnail">
            <img class="product-image" src="~/images/Products/product-@(movie.Id).png" alt="Product image" />
            <div class="caption">
                <h3>@movie.MovieTitle</h3>
                <h4>@movie.Description</h4>
                <h5>@movie.Genre</h5>
                <p>
                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">Details</a>
                </p>
            </div>
        </div>
    }
</div>