@model MovieViewModel
@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
        <div class="thumbnail movies-details">
            <img src="~/images/@Model.Image" alt="Movie image" style="display:block" width="100" class="pull-left details-img" />
            <div class="caption">
                <h3>Title: @Model.MovieTitle</h3>
                <p> Description: @Model.Description</p>
                <h5>Genre: @Model.Genre</h5>
                <p>Director: @Model.Director</p>
                <p>Language: @Model.Language</p>
                <p>Tehnology: @Model.Technology</p>
                <p>Release date: @Model.ReleaseDate</p>
                <hr />
                <p>Cast:</p>
                <ul>
                    @foreach (var actor in Model.Actors)
                    {
                        <li>@actor.FirstName @actor.LastName</li>
                    }
                </ul>

                <span class= "col-md-2">
                    <a asp-action="Shows" asp-controller="Movie" asp-route-id="@Model.Id" class="btn btn-primary ticket-btn">Buy ticket</a>
                </span>
                <span class="col-md-2">
                    <a asp-action="Login" asp-controller="User" asp-route-id="@Model.Id" class="btn btn-primary ticket-btn">Make a reservation</a>
                </span>
            </div>
        </div>
</div>