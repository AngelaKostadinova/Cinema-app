@model MovieViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Movie</h2>
<div class="container">
    <div class="row">
        <form class="form-horizontal" asp-action="Edit" asp-controller="Movie" method="post" enctype="multipart/form-data">
            <partial name="_Form" />
                <div class="form-group">
                    <div class="col-md-10">
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                </div>
        </form>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "MoviePanel")
</div>

