<!-- header section start -->
<header class="header">
    <div class="container">
        <div class="header-area">
            <div class="logo">
                <a href="index.html"><img src="~/images/logo.png" alt="logo" /></a>
            </div>
            <div class="header-right">
                <form action="#">
                    <input type="text" placeholder="Search term" value="@ViewData["Search"]" name="searchTerm">
                    <button type="submit"><i class="icofont icofont-search"></i></button>
                </form>
                <ul>
                    <li><a href="#">Welcome Guest!</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="User" asp-action="LogOut">Log out</a></li>
                    }
                    else
                    {
                        //class="login-popup"
                        <li><a  asp-action="Login" asp-controller="User">Login</a></li>
                    }
                    
                </ul>
            </div>
            <div class="menu-area">
                <div class="responsive-menu"></div>
                <div class="mainmenu">
                    <ul id="primary-menu">
                        <li><a class="active" href="index.html">Home</a></li>
                        <li><a asp-area="" asp-controller="Movie" asp-action="Movies">Movies</a></li>
                        @if (User.IsInRole("admin"))
                        {
                            <li><a asp-area="" asp-controller="Movie" asp-action="MoviePanel">Movie Panel</a></li>
                        }
                        else
                        {
                            if (User.Identity.IsAuthenticated)
                            {
                                <li><a href="#">Top Movies</a></li>
                                <li><a href="#">News</a></li>
                                <li>
                                    <a href="#">Pages <i class="icofont icofont-simple-down"></i></a>
                                    <ul>
                                        <li><a href="blog-details.html">Blog Details</a></li>
                                        <li><a href="movie-details.html">Movie Details</a></li>
                                    </ul>
                                </li>
                                <li><a class="theme-btn" href="#"><i class="icofont icofont-ticket"></i>Tickets</a></li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>
